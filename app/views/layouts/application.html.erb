
<!DOCTYPE html>
<html>
<head>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <title>EventRumble</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap-theme.min.css">
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
  <link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
  <style type="text/css">
    .bs-example{
    	margin-left: 0px;
    	margin-top: 0px;
    }
</style>
</head>
<body>
<div class="bs-example">
    <nav role="navigation" class="navbar navbar-default">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" data-target="#navbarCollapse" data-toggle="collapse" class="navbar-toggle">
                <div class="sr-only">Toggle navigation</div>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a href="#" class="navbar-brand">Event Rumble</a>
        </div>
        <!-- Collection of nav links, forms, and other content for toggling -->
        <% if current_user %>
          <div id="navbarCollapse" class="collapse navbar-collapse">
              <ul class="nav navbar-nav">
                  <li><%= link_to("Profile", users_path, method: :get) %></li>
                  <li><%= link_to("Friends", friends_path, method: :get) %></li>
                  <li><a href="#">Rumble room</a></li> 
              </ul> 
              <ul class="nav navbar-nav navbar-right">
                  <li><a href="/users/<%= current_user.id %>/edit">Update your info</a></li>
                    <li><%= link_to("Log out", logout_path, method: :delete)%></li>
              </ul>
          </div>
        <% end %>
    </nav>
</div>


<%= yield %>

</body>
</html>
